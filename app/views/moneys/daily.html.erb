<h1>Day</h1>
<div><%= @seantest%></div>
<div><%= link_to("BACK", moneys_path)%></div>

<div>
	<% if @daily_costs.size == 0 %>
	查無資料
	<% else %>
	共<%= @daily_costs.size %>筆資料
	<% end %>
<div>
	<table>
		<thead>
			<tr>
				<td>#</td>
				<td>日期</td>
				<td>標題</td>
				<td>消費金額</td>				
				<td>敘述</td>
				<td>心情</td>
				<td>消費方式</td>
			</tr>
		</thead>
		<tbody>
			<% @daily_costs.each do |money| %>			
			<tr>
				<td>#</td>
				<td><%= money.created_at.strftime("%Y/%m/%d") %></td>
				<td><%= money.title %></td>d
				<td>$<%= money.cost %></td>				
				<td><%= money.description %></td>
				<td>
					<% if money.feel == 1 %>
					<%=  "Good" %>
					<% elsif money.feel == 2 %>
					<%=  "Bad" %>
					<% elsif money.feel == 3 %>
					<%=  "soso" %>
					<% else %>
					<%=  "nothing"%>
					<% end %>					
				</td>
				<td><%= money.paytype %></td>
				<td><%= link_to("編輯", edit_money_path(money)) %></td>
				<td><%= link_to("刪除", money_path(money), method: :delete, data:{confirm: "are you sure?"}) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
	<% end %>
	
</div>

